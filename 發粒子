    <div class="summary-grid" id="res"></div>

    <button class="reset-btn" onclick="if(confirm('ÈáçÁΩÆÊâÄÊúâÂàÜÊï∏Ôºü')) location.reload()">Ê∏ÖÈô§ÊâÄÊúâË≥áÊñô</button>

<script>
    const gb = document.getElementById('gb');
    for (let i = 1; i <= 10; i++) {
        const tr = document.createElement('tr');
        tr.innerHTML = `
            <td style="color:#888; font-size:0.8rem">${i}</td>
            <td><input type="number" class="r-${i} s1 score-input" value="8" oninput="v(${i})"></td>
            <td><input type="number" class="r-${i} s2 score-input" value="8" oninput="v(${i})"></td>
            <td><input type="number" class="r-${i} s3 score-input" value="8" oninput="v(${i})"></td>
            <td><input type="number" class="r-${i} s4 score-input" value="8" oninput="v(${i})"></td>
            <td id="sum-${i}" class="status-cell valid">32</td>
        `;
        gb.appendChild(tr);
    }

    function v(r) {
        let s = 0;
        document.querySelectorAll(`.r-${r}`).forEach(el => s += Number(el.value) || 0);
        const c = document.getElementById(`sum-${r}`);
        c.innerText = s;
        c.className = 'status-cell ' + (s === 32 ? 'valid' : 'invalid');
        update();
    }

    function update() {
        const names = [document.getElementById('p1_n').value, document.getElementById('p2_n').value, document.getElementById('p3_n').value, document.getElementById('p4_n').value];
        names.forEach((n, i) => { document.querySelectorAll(`.l${i+1}`).forEach(el => el.innerText = n); });

        const totals = [0,0,0,0];
        for(let i=1; i<=4; i++) {
            document.querySelectorAll(`.s${i}`).forEach(el => totals[i-1] += Number(el.value) || 0);
        }

        const container = document.getElementById('res');
        container.innerHTML = totals.map((t, i) => {
            const d = t - 80;
            return `
                <div class="result-card">
                    <div style="font-size:0.8rem; color:#666">${names[i]}</div>
                    <div class="total">${t}</div>
                    <div class="diff ${d>=0?'plus':'minus'}">${d>=0?'+'+d:d}</div>
                </div>
            `;
        }).join('');
    }
    update();
</script>
