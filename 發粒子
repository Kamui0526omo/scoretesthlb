        <input type="text" id="p1_n" value="P1" oninput="update()">
        <input type="text" id="p2_n" value="P2" oninput="update()">
        <input type="text" id="p3_n" value="P3" oninput="update()">
        <input type="text" id="p4_n" value="P4" oninput="update()">
